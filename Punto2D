package unidad;
import static java.lang.Math.*;

public class Punto2D {
    private double x,y;

    public Punto2D(double x, double y) {
        this.x = x;
        this.y = y;
    }
    
    public double distancia(Punto2D p){
        return (sqrt(pow(this.y-p.y,2)+pow(this.x-p.x,2)));
        //return Math.pow((this.y-p.y),2)+Math.sqrt(Math.pow(this.x-p.x), 2);
    }

	

	

	public boolean equals(Punto2D desplazar) {
		
		return this.x==desplazar.x && this.y==desplazar.y;
	}

	           
    
}
